<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="#23272F">

    <TextView
        android:id="@+id/categoriesTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/categories_title_horizontal_margin"
        android:layout_marginTop="@dimen/categories_title_top_margin"
        android:layout_marginEnd="@dimen/categories_title_horizontal_margin"
        android:fontFamily="sans-serif"
        android:text="@string/browse_by_categories_title"
        android:textColor="@color/categories_title_text_color"
        android:textSize="@dimen/categories_title_text_size"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/categoriesRecyclerView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/categories_recycler_view_horizontal_margin"
        android:layout_marginTop="@dimen/categories_recycler_view_top_margin"
        android:layout_marginEnd="@dimen/categories_recycler_view_horizontal_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/categoriesTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>